            @Html.LabelFor(model => model.MaLoaiTaiKhoan, "Mã loại tài khoản", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaLoaiTaiKhoan", null, htmlAttributes: new { @class = "form-control my-1" })
                @Html.ValidationMessageFor(model => model.MaLoaiTaiKhoan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm nhân viên" class="btn btn-success my-2" />
            </div>
