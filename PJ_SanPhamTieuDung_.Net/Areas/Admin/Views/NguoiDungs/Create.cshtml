@model PJ_SanPhamTieuDung_.Net.Models.NguoiDung

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5 class="text-uppercase fw-bold">Thêm nhân viên</h5>

