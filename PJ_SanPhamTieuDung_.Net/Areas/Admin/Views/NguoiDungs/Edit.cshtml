@model PJ_SanPhamTieuDung_.Net.Models.NguoiDung

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5 class="text-uppercase fw-bold">Chỉnh sửa người dùng</h5>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Người dùng</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaNguoiDung)
    <div class="row">
        <div class="col-sm">
            <div class="form-group">
                @Html.LabelFor(model => model.TenNguoiDung, "Tên người dùng", htmlAttributes: new { @class = "control-label col-md-2 w-100" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenNguoiDung, new { htmlAttributes = new { @class = "form-control my-1" } })
                    @Html.ValidationMessageFor(model => model.TenNguoiDung, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="form-group">
                @Html.LabelFor(model => model.EmailNguoiDung, "Email", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.EmailNguoiDung, new { htmlAttributes = new { @class = "form-control my-1" } })
                    @Html.ValidationMessageFor(model => model.EmailNguoiDung, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <div class="form-group">
                @Html.LabelFor(model => model.SdtNguoiDung, "Số điện thoại", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SdtNguoiDung, new { htmlAttributes = new { @class = "form-control my-1" } })
                    @Html.ValidationMessageFor(model => model.SdtNguoiDung, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="form-group">
                @Html.LabelFor(model => model.DiaChiNguoiDung, "Địa chỉ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DiaChiNguoiDung, new { htmlAttributes = new { @class = "form-control my-1" } })
                    @Html.ValidationMessageFor(model => model.DiaChiNguoiDung, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="btn btn-success my-2" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>
