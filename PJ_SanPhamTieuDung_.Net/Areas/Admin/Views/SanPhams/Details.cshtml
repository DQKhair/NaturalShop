@model PJ_SanPhamTieuDung_.Net.Models.SanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5 class="text-uppercase fw-bold">Chi tiết sản phẩm</h5>

<div>
    <div class="d-flex justify-content-between">
        <h4>Sản phẩm</h4>
        <p>@Html.ActionLink("Trở về", "Index")</p>
    </div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Tên sản phẩm")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSanPham)
        </dd>

        <dt>
            @Html.DisplayName("Đơn gián")
        </dt>

        <dd class="text-danger">@{ int price = Convert.ToInt32(Html.DisplayFor(m => m.DonGia).ToString());}
            @price.ToString("n0") VNĐ
        </dd>

        <dt>
            @Html.DisplayName("Mô tả sản phẩm")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MoTaSanPham)
        </dd>

        <dt>
            @Html.DisplayName("Hình ảnh")
        </dt>

        <dd>
            <img class="w-50" src="@Html.DisplayFor(model => model.HinhAnh)" alt="anh san pham" />
        </dd>

        <dt>
            @Html.DisplayName("Mô tả chi tiết")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MoTaChiTietSanPham)
        </dd>

        <dt>
            @Html.DisplayName("Cách sử dụng")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CachDungSanPham)
        </dd>

        <dt>
            @Html.DisplayName("Hình ảnh 2")
        </dt>

        <dd>
            <img class="w-50" src="@Html.DisplayFor(model => model.HinhAnh2)" alt="hinh anh san pham 2" />
        </dd>

        <dt>
            @Html.DisplayName("Hình ảnh 3")
        </dt>

        <dd>
            <img class="w-50" src="@Html.DisplayFor(model => model.HinhAnh3)" alt="hinh anh san pham 3" />
        </dd>

        <dt>
            @Html.DisplayName("Khuyến mãi")
        </dt>

        <dd>
            @{ var khuyenmai = Html.DisplayFor(model => model.khuyenmai).ToString();
                if (!String.IsNullOrEmpty(khuyenmai))
                {
                    <p>Đang khuyến mãi</p>
                    }
                    else { <p>Không</p>}
                }
        </dd>

        <dt>
            @Html.DisplayName("Tên danh mục sản phẩm")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DanhMucSanPham.TenDanhMucSanPham)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaSanPham },new {@class ="btn btn-success my-2" })
    
</p>
