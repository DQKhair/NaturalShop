                @Html.ValidationMessageFor(model => model.MoTaChiTietSanPham, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaDanhMucSanPham, "Mã danh mục sản phẩm", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaDanhMucSanPham", null, htmlAttributes: new { @class = "form-control my-1" })
                @Html.ValidationMessageFor(model => model.MaDanhMucSanPham, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CachDungSanPham,"Công dụng sản phẩm", htmlAttributes: new { @class = "control-label col-md-2" })
