@model PJ_SanPhamTieuDung_.Net.Models.NguoiDung
@{
    ViewBag.Title = "ChangeMyPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="w-75 border shadow mx-auto my-5 d-flex justify-content-center">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken();
        @Html.ValidationSummary(true, null, new { @class = "text-danger text-center" })
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        <div class="my-5">
            <h5 class="text-uppercase fw-bold">Thay đổi mật khẩu</h5>
            <hr />
            <div class="my-2">
                <label class="form-label">Tên tài khoản</label>
                <input type="text" name="TaiKhoan_ChangeMyPass" readonly value="@Html.DisplayFor(m=>m.UserNames)" class="form-control mt-2" />
            </div>
            <div class="my-2">
                <label class="form-label">Mật khẩu cũ</label>
                <input type="password" name="TaiKhoan_ChangeMyPassOld" value="" class="form-control mt-2" required />
            </div>
            <div class="my-2">
                <label class="form-label">Mật khẩu mới</label>
                <input type="password" name="TaiKhoan_ChangeMyPass_New" value="" class="form-control mt-2" required />
            </div>
            <div class="my-2">
                <label class="form-label">Nhập lại mật khẩu mới</label>
                <input type="password" name="TaiKhoan_ReChangeMyPass_New" value="" class="form-control mt-2" required />
            </div>
            <div>
                <input class="btn btn-success" type="submit" name="submit" value="Lưu" />
            </div>
        </div>
    }
</div>
