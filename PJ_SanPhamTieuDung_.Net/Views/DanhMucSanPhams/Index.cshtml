@model IEnumerable<PJ_SanPhamTieuDung_.Net.Models.DanhMucSanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5 class="text-uppercase fw-bold">Quản Lý Danh mục sản phẩm</h5>

<p>
    @Html.ActionLink("Thêm danh mục", "Create","",new {@class="btn btn-success mt-3"})
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayName("Mã danh mục sản phẩm")
        </th>
        <th>
            @Html.DisplayName("Tên danh mục sản phẩm")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaDanhMucSanPham)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenDanhMucSanPham)
    </td>
    <td>
        @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = item.MaDanhMucSanPham },new {@class="btn btn-outline-success" })
        @Html.ActionLink("Xóa", "Delete", new { id = item.MaDanhMucSanPham }, new { @class = "btn btn-success" })
    </td>
</tr>
}

</table>
